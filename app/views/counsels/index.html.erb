<% require "date" %>
<p id="not""ice"><%= notice %></p>

<h1>カウンセリング一覧</h1>

<table border="1">
  <thead>
    <tr>
      <th>日にち</th>
      <th>時間</th>
      <th>先生</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counsels.each do |counsel| %>
      <tr>
        <td><%= counsel.day %></td>
        <td><%= counsel.start_time.strftime("%H:%M") %>~<%= counsel.end_time.strftime("%H:%M") %></td>
        <td><%= counsel.teacher %>先生</td>
        <td><%= link_to '詳細', counsel %></td>
        <td><%= link_to '編集', edit_counsel_path(counsel) %></td>
        <td><%= link_to '削除', counsel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

