<p id="notice"><%= notice %></p>

<h1>Counsels</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counsels.each do |counsel| %>
      <tr>
        <td><%= counsel.day %></td>
        <td><%= counsel.start_time %></td>
        <td><%= counsel.end_time %></td>
        <td><%= counsel.teacher %></td>
        <td><%= link_to 'Show', counsel %></td>
        <td><%= link_to 'Edit', edit_counsel_path(counsel) %></td>
        <td><%= link_to 'Destroy', counsel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

